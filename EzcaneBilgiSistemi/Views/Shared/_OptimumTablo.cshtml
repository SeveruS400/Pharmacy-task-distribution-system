@using Entities.Models;
@model List<EczaneBilgileri>

@if (Model.Count == 0)
{
    <h3>Bu alanda başka eczane bulunmamaktadır</h3>
}
else
{
    <!-- Sayfa numarasını tutacak gizli bir input öğesi -->
    <input type="hidden" id="currentPage" value="@ViewBag.PageNumber" />
    <h2>Eczane Bilgileri</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Eczane Adı</th>
                <th>Ezane Adresi</th>
                <th>Adres Tarifi</th>
                <th>Eczane Telefonu</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var eczane in Model)
                {
                    <tr>
                        <td>@eczane.EczaneAdi</td>
                        <td>@eczane.EczaneAdresi</td>
                        <td>@eczane.EczaneAdresTarifi</td>
                        <th>@eczane.EczaneTelefon</th>
                    </tr>
                }
            }
        </tbody>
    </table>
}
